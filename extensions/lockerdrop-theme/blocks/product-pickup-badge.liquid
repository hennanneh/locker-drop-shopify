{% comment %}
  LockerDrop - Product Pickup Badge
  Shows "Available for Locker Pickup" on product pages
{% endcomment %}

{% style %}
  .lockerdrop-badge {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 14px 16px;
    background: {{ block.settings.background_color }};
    border-radius: 8px;
    border: 1px solid #c7d2fe;
    margin: 16px 0;
  }

  .lockerdrop-badge__icon {
    flex-shrink: 0;
    width: 36px;
    height: 36px;
    background: {{ block.settings.accent_color }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 18px;
  }

  .lockerdrop-badge__content {
    flex: 1;
    min-width: 0;
  }

  .lockerdrop-badge__title {
    font-size: 14px;
    font-weight: 600;
    color: #1e293b;
    margin: 0 0 2px;
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .lockerdrop-badge__title svg {
    width: 14px;
    height: 14px;
    color: #22c55e;
  }

  .lockerdrop-badge__desc {
    font-size: 12px;
    color: #64748b;
    margin: 0;
  }

  .lockerdrop-badge__link {
    display: inline-block;
    margin-top: 6px;
    font-size: 12px;
    color: {{ block.settings.accent_color }};
    text-decoration: none;
    font-weight: 500;
  }

  .lockerdrop-badge__link:hover {
    text-decoration: underline;
  }
{% endstyle %}

<div class="lockerdrop-badge">
  <div class="lockerdrop-badge__icon">ðŸ“¦</div>
  <div class="lockerdrop-badge__content">
    <p class="lockerdrop-badge__title">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
        <path fill-rule="evenodd" d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12zm13.36-1.814a.75.75 0 10-1.22-.872l-3.236 4.53L9.53 12.22a.75.75 0 00-1.06 1.06l2.25 2.25a.75.75 0 001.14-.094l3.75-5.25z" clip-rule="evenodd" />
      </svg>
      {{ block.settings.title }}
    </p>
    <p class="lockerdrop-badge__desc">{{ block.settings.description }}</p>
    {% if block.settings.link_url != blank %}
      <a href="{{ block.settings.link_url }}" class="lockerdrop-badge__link">{{ block.settings.link_text }} â†’</a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "LockerDrop Badge",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Available for Locker Pickup"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Pick up from a secure locker at your convenience."
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link text",
      "default": "How it works"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent color",
      "default": "#5c6ac4"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background",
      "default": "#f0f4ff"
    }
  ]
}
{% endschema %}
